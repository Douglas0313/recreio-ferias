@model RecreioFerias.Models.Matricula

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="titulo-aluno">Delete</h1>

<div>
    <h2 class="titulo-aluno">Matricula</h2>

    <hr />

    <div class="container mt-5">
        <div class="card">
            <div class="card-header bg-danger text-white"
            aria-label="Simbola de lixeira">
                <h3 class="formulario-campo-titulo"><i class="bi bi-trash"></i>Confirmar Exclusão</h3>
            </div>
            <div class="card-body formulario-campo-informacoes">
                <p>Tem certeza que deseja excluir esta Matricula? </p>
                <div class="row mb-3">

                    <label  class="col-md-1"><b>Nome: </b></label>
                    <div class="col-md-4">
                        @Html.DisplayFor(model => model.Aluno.Nome)
                    </div>

                    <label class="col-md-2"><b>Data de Nascimento: </b></label>
                    <div class="col-md-2">
                        @Html.DisplayFor(model => model.Aluno.DataNascimento)
                    </div>
                    <label  class="col-md-2"><b>Idade: </b></label>
                    <div class="col-md-1">
                        @Html.DisplayFor(model => model.Aluno.IdadeCalculada)
                    </div>

                </div>
                <div class="row mb-3">

                    <label class="col-md-1"><b>Turma: </b></label>
                    <div class="col-md-4">
                        @Html.DisplayFor(model => model.Turma.Descricao)
                    </div>
                    <label class="col-md-2"><b>Faixa Etária: </b></label>
                    <div class="col-md-4">
                        @Html.DisplayFor(model => model.Turma.FaixaEtaria)
                    </div>
                </div>
                <br />
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MatriculaId" />
                    <button class="btn btn-danger formulario-campo-informacoes" value="Delete" type="submit"
                    aria-label="Botao Deletar"
                    >
                        <i class="bi bi-trash" style="vertical-align: middle;"></i>&#32 Apagar
                       
                    </button>


                    &#32&#32&#32&#32
                    <a asp-action="Index" class="btn btn-outline-secondary small formulario-campo-informacoes"" style="color:darkgray"
                    aria-label="Botão Voltar"
                    >
                        <i class="bi bi-arrow-left-square"></i>&#32 <b>Voltar</b>
                    </a>
    </form>
            </div>
        </div>
    </div>
</div>