@model RecreioFerias.Models.Turma

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="titulo-aluno">Delete</h1>

<div>
    <h2 class="formulario-campo-titulo">Turma</h2>

    <hr />

    <div class="container mt-5">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h3 class="formulario-campo-titulo"><i class="bi bi-trash"></i>Confirmar Exclusão</h3>
            </div>
            <div class="card-body formulario-campo-informacoes">
                <p>Tem certeza que deseja excluir esta Turma? </p>
                <div class="row">

                    <div class="col-1">
                        <b>Turma: </b>
                    </div>
                    <div class="col-2">
                        @Html.DisplayFor(model => model.Descricao)
                    </div>
                    <div class="col-2">
                           <b>Quantidade Total de Alunos: </b>
                     </div>
                     <div class="col-1">
                        @Html.DisplayFor(model => model.QuantidadeAlunos)
                     </div>
                 </div>
       
    <br/>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TurmaId" />
                    <button class="btn btn-danger formulario-campo-informacoes" value="Delete" type="submit"
                    aria-label="Botão Deletar"
                    >
                        <i class="bi bi-trash" style="vertical-align: middle;"></i>&#32 Apagar
                       
                    </button>
                    &#32&#32&#32&#32
                    <a asp-action="Index" class="btn btn-outline-secondary small formulario-campo-informacoes" style="color:darkgray"
                    aria-label="Botão Voltar">
                        <i class="bi bi-arrow-left-square"></i>&#32 <b>Voltar</b>
                    </a>
    </form>
            </div>
        </div>
    </div>
</div>
