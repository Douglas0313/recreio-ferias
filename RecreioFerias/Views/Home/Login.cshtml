@model RecreioFerias.Models.Operador

@{
    ViewData["Title"] = "Login";
  
}



<div class="d-flex justify-content-center align-items-center vh-100 fonte-login">
    <div class="card p-4 shadow" style="width: 24rem;">
        <main class="form-signin w-100">
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card-header" >
                    <img src="~/imagens/recreio_nas_ferias_logo.png" class="img-fluid"  alt="" >
                </div>
                <div class="card-body">
                    <p class="text-center fs-personalizado">Entre com seu login e senha</p>
                <div class="form-floating mb-3">
                    <input asp-for="Login" class="form-control" placeholder="Login" />
                    <label for="Login" class="fs-personalizado">Login</label>
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Senha" class="form-control" type="password" placeholder="Senha" />
                    <label for="Senha" class="fs-personalizado">Senha</label>
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                </div>
                <div class="card-footer">
                <button class="btn btn-primary w-100 py-2 fs-personalizado" type="submit" >Entrar</button>
                <p class="text-center text-decoration fs-personalizado"><a href="#">Esqueceu a senha ?</a></p>
              
                </div>
            </form>
        </main>
    </div>
</div>
